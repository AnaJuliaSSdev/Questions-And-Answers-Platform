<%- include ('partials/header.ejs') %> 
<body>
  <%- include ('partials/navbar.ejs') %> 
  <div class="container">
    <h1>Questions</h1>
    <hr>
    <a href="/ask" class="btn btn-dark">Make a question</a>
    <hr>
    <% questions.forEach(question => { %>
      <br>
      <div class="card">
        <div class="card-body">
         <h3><%= question.title %></h3>
        </div>
        <div class="card-footer">
          <p><%= question.description %></p>
          <a href="/question/<%= question.id %>"><button class="btn btn-dark">Answer</button></a>
        </div>
      </div>
   <% }) %>
  </div>
</body>
<%- include ('partials/footer.ejs') %> 